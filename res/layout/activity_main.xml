<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inspirationalquotes.MainActivity"
    android:background="@drawable/inspirational" >

    <Button
        android:id="@+id/btnBack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="91dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/backward"
        android:onClick="DoneQuoting" />

    <Button
        android:id="@+id/btnForwad"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBack"
        android:layout_alignBottom="@+id/btnBack"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/forwad"
        android:onClick="DoneQuoting" />

    <Button
        android:id="@+id/btnRandom"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnForwad"
        android:layout_alignBottom="@+id/btnForwad"
        android:layout_centerHorizontal="true"
        android:background="@drawable/randome"
        android:onClick="DoneQuoting" />

    <TextView
        android:id="@+id/tvQuotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRandom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:text="Click For Inspirational Quotes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF00" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnRandom"
        android:layout_below="@+id/btnRandom"
        android:layout_marginTop="41dp"
        android:text="number"
        android:textColor="#FF00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
